@model List<Celebrity>

@{
    ViewData["Title"] = "Celebrities";
}
<h1>@ViewData["Title"]</h1>
<style>
    th {
        text-align: center;
    }

    th, td {
        padding: 0px 6px;
    }

    .c {
        text-align: center;
    }

    .r {
        text-align: right;
    }

    .b {
        font-weight: bold;
    }
</style>

@if (Model.Count > 0)
{
    <section title="My Competitions" style="width: 100%">
        <table id="tblCompetition" class="tblListView display">
            <thead>
                <tr>
                    <th>Celebrity</th>
                    <th>Type</th>
                    <th>Birth Date</th>
                    <th>Age</th>
                    <th>Death Date</th>
                    <th>Points</th>
                 </tr>
            </thead>
            <tbody>
                @{
                    var altRow = false;
                    @foreach (Celebrity celebrity in Model)
                    {
                        <tr style="background-color:@(altRow ? "#fff" : "#E0EBEB");">
                            <td class="b">
                                @(celebrity.celebrity_name)
                            </td>
                            <td>
                                @(celebrity.lk_celebrity_type.celebrity_type)
                            </td>
                            <td class="r">
                                @(celebrity.birth_date)
                            </td>
                            <td class="c">
                                @(celebrity.age)
                            </td>
                            <td class="r">
                                @(celebrity.death_date)
                            </td>
                            <td class="c">
                                @(celebrity.points)
                            </td>
                        </tr>

                        altRow = !altRow;
                    }
                }
            </tbody>
        </table>
    </section>
}
else
{
    <p>No celebrities found.</p>
}